<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom_button で使用するスタイル -->
    <style name="CustomButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@drawable/custom_button_selector</item>
        <item name="android:fontFamily">@font/jersey10_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- フォーミュラボタン用のスタイル（CustomButtonベース） -->
    <style name="FormulaButton" parent="CustomButton">
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CustomProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progress_white</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>

    <style name="CustomProgressBar_red" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progress_red</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
    </style>

    <style name="CustomDrawerItemTextStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/dizygotic16_regular</item>
        <item name="android:textSize">16sp</item>
        <!--        <item name="android:textColor">@color/black</item>-->
    </style>

</resources>