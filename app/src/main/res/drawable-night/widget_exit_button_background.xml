<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/widget_time_component_pressed_dark" />
            <corners android:radius="6dp" />
            <stroke
                android:width="2dp"
                android:color="@color/widget_border_dark" />
        </shape>
    </item>
    
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/widget_button_background_dark" />
            <corners android:radius="6dp" />
            <stroke
                android:width="2dp"
                android:color="@color/widget_border_dark" />
        </shape>
    </item>
    
</selector>