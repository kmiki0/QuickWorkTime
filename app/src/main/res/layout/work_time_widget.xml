<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="horizontal"
    android:padding="@dimen/widget_padding"
    android:gravity="center_vertical">

    <!-- 時間表示エリア全体(縦並び) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Time Display Section -->
        <LinearLayout
            android:id="@+id/widget_time_display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/widget_time_display_background"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp">

            <TextView
                android:id="@+id/widget_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日"
                android:textSize="@dimen/widget_date_text_size"
                android:textColor="@color/widget_text_secondary"
                android:fontFamily="@font/jersey10_regular"
                android:layout_marginTop="4dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/widget_hour_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18"
                    android:textSize="@dimen/widget_time_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/widget_text_primary"
                    android:fontFamily="@font/jersey10_regular"
                    android:background="@drawable/widget_time_component_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp"
                    android:minWidth="@dimen/widget_time_component_min_width"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textSize="@dimen/widget_time_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/widget_text_primary"
                    android:fontFamily="@font/jersey10_regular"
                    android:layout_marginHorizontal="2dp" />

                <TextView
                    android:id="@+id/widget_minute_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:textSize="@dimen/widget_time_text_size"
                    android:textStyle="bold"
                    android:textColor="@color/widget_text_primary"
                    android:fontFamily="@font/jersey10_regular"
                    android:background="@drawable/widget_time_component_background"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp"
                    android:minWidth="@dimen/widget_time_component_min_width"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

        <!-- 時間調整ボタン(横並び) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <Button
                android:id="@+id/widget_minus_5_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="32dp"
                android:text="-5分"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/widget_text_primary"
                android:fontFamily="@font/jersey10_regular"
                android:background="@drawable/widget_exit_button_background"
                android:padding="4dp"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/widget_plus_5_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="32dp"
                android:text="+5分"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/widget_text_primary"
                android:fontFamily="@font/jersey10_regular"
                android:background="@drawable/widget_exit_button_background"
                android:padding="4dp"
                android:layout_marginStart="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Clock Out Button -->
    <Button
        android:id="@+id/widget_clock_out_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:layout_marginStart="12dp"
        android:text="Exit"
        android:textSize="@dimen/widget_button_text_size"
        android:textStyle="bold"
        android:minWidth="@dimen/widget_button_min_width"
        android:background="@drawable/widget_exit_button_background"
        android:textColor="@color/widget_text_primary"
        android:fontFamily="@font/jersey10_regular"
        android:elevation="@dimen/widget_elevation" />

</LinearLayout>

