<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="horizontal"
    android:padding="@dimen/widget_padding"
    android:gravity="center_vertical">

    <!-- Time Display Section -->
    <LinearLayout
        android:id="@+id/widget_time_display"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/widget_time_display_background"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp">

        <!-- Time Section with Hour and Minute separated for flick gestures -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/widget_hour_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:textSize="@dimen/widget_time_text_size"
                android:textStyle="bold"
                android:textColor="@color/widget_text_primary"
                android:fontFamily="@font/jersey10_regular"
                android:background="@drawable/widget_time_component_background"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:minWidth="@dimen/widget_time_component_min_width"
                android:gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="@dimen/widget_time_text_size"
                android:textStyle="bold"
                android:textColor="@color/widget_text_primary"
                android:fontFamily="@font/jersey10_regular"
                android:layout_marginHorizontal="2dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- 上ボタン (+5分) -->
                <ImageButton
                    android:id="@+id/widget_minute_up_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/arrow_up_float"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="5分追加"
                    android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/widget_minute_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textSize="@dimen/widget_time_text_size"
                android:textStyle="bold"
                android:textColor="@color/widget_text_primary"
                android:fontFamily="@font/jersey10_regular"
                android:background="@drawable/widget_time_component_background"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp"
                android:minWidth="@dimen/widget_time_component_min_width"
                android:gravity="center" />

                <!-- 下ボタン (-5分) -->
                <ImageButton
                    android:id="@+id/widget_minute_down_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@android:drawable/arrow_down_float"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="5分削除"
                    android:scaleType="fitCenter" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/widget_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今日"
            android:textSize="@dimen/widget_date_text_size"
            android:textColor="@color/widget_text_secondary"
            android:fontFamily="@font/jersey10_regular"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/widget_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退勤予定"
            android:textSize="@dimen/widget_status_text_size"
            android:textColor="@color/widget_text_secondary"
            android:fontFamily="@font/jersey10_regular"
            android:layout_marginTop="2dp"
            android:visibility="visible" />

    </LinearLayout>

    <!-- Clock Out Button -->
    <Button
        android:id="@+id/widget_clock_out_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:text="Exit"
        android:textSize="@dimen/widget_button_text_size"
        android:textStyle="bold"
        android:minWidth="@dimen/widget_button_min_width"
        android:background="@drawable/widget_exit_button_background"
        android:textColor="@color/widget_text_primary"
        android:fontFamily="@font/jersey10_regular"
        android:elevation="@dimen/widget_elevation" />

</LinearLayout>