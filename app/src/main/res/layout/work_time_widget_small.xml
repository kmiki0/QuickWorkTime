<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="@dimen/widget_padding_small"
    android:gravity="center">

    <!-- Time Display Section - StackView -->
    <FrameLayout
        android:id="@+id/widget_time_display"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/widget_time_display_background"
        android:padding="4dp">

        <StackView
            android:id="@+id/widget_time_stack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:loopViews="false"
            android:animateLayoutChanges="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="horizontal"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/widget_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="今日"
                android:textSize="@dimen/widget_date_text_size_small"
                android:textColor="@color/widget_text_secondary"
                android:fontFamily="@font/jersey10_regular" />

            <TextView
                android:id="@+id/widget_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退勤予定"
                android:textSize="@dimen/widget_status_text_size_small"
                android:textColor="@color/widget_text_secondary"
                android:fontFamily="@font/jersey10_regular"
                android:layout_marginStart="4dp"
                android:visibility="visible" />

        </LinearLayout>

    </FrameLayout>

    <!-- Clock Out Button -->
    <Button
        android:id="@+id/widget_clock_out_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Exit"
        android:textSize="@dimen/widget_button_text_size_small"
        android:textStyle="bold"
        android:minHeight="@dimen/widget_button_min_height"
        android:background="@drawable/widget_exit_button_background"
        android:textColor="@color/widget_text_primary"
        android:fontFamily="@font/jersey10_regular"
        android:elevation="@dimen/widget_elevation_small" />

</LinearLayout>